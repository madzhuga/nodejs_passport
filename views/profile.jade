extends layout

block content
  .container

    .page-header.text-center
      h1
        span.fa.fa-anchor
        |&nbsp;Profile Page&nbsp;
      a.btn.btn-default.btn-sm( href="/logout" ) Logout

    .row

      .col-sm-6
        .well
          h3
            span.fa.fa-user
            |&nbsp;Local

          p
            strong
              |id
            |:
            = user._id
            br
            strong
              | email
            |:
            = user.local.email
            br
            strong
              |password
            |:
            = user.local.password